{
  "manifest_version": 3,
  "name": "YouTube Speed Adjuster",
  "description": "Dynamically set YouTube playback speed from 0.1x to 10x.",
  "version": "1.0.0",
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://m.youtube.com/*",
    "https://youtu.be/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*",
        "https://m.youtube.com/*",
        "https://youtu.be/*"
      ],
      "js": ["src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "YouTube Speed Adjuster",
    "default_popup": "popup.html"
  }
}
